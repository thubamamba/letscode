<h1 class="text-center" style="color: #c10000">Contact Us</h1>

<form class="col-md-6 offset-md-3" method="post">
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Your Name" name="name" value="{{name}}">
    </div>
    <div class="form-group">
        <input type="email" class="form-control" aria-describedby="emailHelp" placeholder="Enter your email" name="email" value="{{email}}">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>
    <div class="form-group">
        <textarea class="form-control" rows="3" placeholder="What's on your mind?" name="message">{{message}}</textarea>
    </div>
    <!-- For Form Validation: Shows Errors -->
    {{#each errorMessages}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}
    <button type="submit" class="btn btn-primary">Contact Now</button>
</form>
